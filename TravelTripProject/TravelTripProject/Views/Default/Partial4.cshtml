@using TravelTripProject.Models.EntityFramework
@model List<Blog>
<<div class="box1-left">
     <div class="panel-default">
         @foreach (var blog in Model)
         {
             <div class="bot-img">
                 <img src="@blog.BlogImage" alt="" />
             </div>
             <div class="bot-desc1">
                 <p>@blog.Description.Substring(0, 75)</p>
             </div>
             <div class="clear"></div>
         }
         </div>
     </div>
