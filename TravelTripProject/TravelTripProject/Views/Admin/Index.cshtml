@using TravelTripProject.Models.EntityFramework
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

    <div class="container" style="width:100%;" >
        <h2 style="text-align:start;font-size:xx-large">Blog Listesi</h2>
        <table class="table table-hover" style="width:100%;">
            <thead style="background-color:black">
                <tr style="color:white">
                    <th>ID</th>
                    <th>Başlık</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                    <th>Detaylar</th>
                </tr>
            </thead>
           
            <tbody>
                @foreach (var blog in Model)
                {
                    <tr>
                        <td>@blog.ID</td>
                        <td>@blog.Heading</td>
                        <td><a href="/Admin/DeleteBlog/@blog.ID" class="btn btn-danger">Sil</a></td>
                        <td><a href="/Admin/GetBlog/@blog.ID" class="btn btn-primary">Güncelle</a></td>
                        <td><a href="#" class="btn btn-info">Detaylar</a></td>
                    </tr>
                }
                </tbody>
        </table>
        <a href="/Admin/AddBlog" class="btn btn-success">Yeni Blog</a>
    </div>

</body>
</html>
