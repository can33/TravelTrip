@model TravelTripProject.Models.EntityFramework.Comment
@{
    ViewBag.Title = "GetCommentAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h2>Yorum Güncelleme Sayfası</h2>
@using (Html.BeginForm("UpdateCommentAdmin", "Admin", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.ID)
        @Html.TextBoxFor(m => m.ID, new { @class = "form-control", @readonly = "readonly" })
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(m => m.Mail)
        @Html.TextBoxFor(m => m.Mail, new { @class = "form-control" })
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(m => m.YComment)
        @Html.TextAreaFor(m => m.YComment, 3, 1, new { @class = "form-control" })
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(m => m.UserName)
        @Html.TextAreaFor(m => m.UserName, new { @class = "form-control" })
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(m => m.BlogId)
        @Html.TextBoxFor(m => m.BlogId, new { @class = "form-control", @readonly = "readonly" })
    </div>
    <button type="submit" class="btn btn-success">Yeni Blog Güncelle</button>
}