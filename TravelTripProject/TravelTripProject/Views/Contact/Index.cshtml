@using TravelTripProject.Models.EntityFramework
@model List<Contact>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/footercss/footer.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            max-width: 300px;
            margin: auto;
            margin-top: 25px;
            text-align: center;
            font-family: 'Matura MT Script Capitals';
        }
        .title {
            color: black;
            font-size: 25px;
        }

        button {
            border: none;
            outline: 0;
            display: inline-block;
            padding: 8px;
            color: white;
            background-color: #000;
            text-align: center;
            cursor: pointer;
            width: 100%;
            font-size: 18px;
        }

        a {
            text-decoration: none;
            font-size: 22px;
            color: black;
        }

            button:hover, a:hover {
                opacity: 0.7;
            }
    </style>
</head>
<body style="background-color:gray;">  
    
    <div class="card">
        <img src="~/Content/contactcss/images/avataaars.png" alt="John" style="width:100%;height:250px ">

        @foreach (var contact in Model)
        {
            <h1>@contact.FullName</h1>
            <h4 class="title">@contact.Mail</h4>
        }
    <p>İskenderun Teknik Üniversitesi
        Bilgisayar Mühendisliği </p>
        <div style="margin: 24px 0;">

            <a href="https://twitter.com/Can_Kecef"><i class="fab fa-twitter"></i></a>
            <a href="https://www.instagram.com/can_kecef1/"><i class="fab fa-instagram"></i></a>
        </div>
        <p><button>İletişim</button></p>
    </div>

</body>
</html>


